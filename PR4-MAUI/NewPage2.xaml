<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PR4_MAUI.NewPage2"
             Title="О программе">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="О программе" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"/>


            <VerticalStackLayout Spacing="15">
                <Label Text="Арифметические операции" 
                           FontSize="18" 
                           FontAttributes="Bold"/>

                <Label Text="Эта программа позволяет выполнять различные математические операции над двумя числами:"/>

                <Label Text="• Сложение (+)" />
                <Label Text="• Вычитание (-)" />
                <Label Text="• Умножение (*)" />
                <Label Text="• Деление (/)" />
                <Label Text="• Остаток от деления (%)" />
                <Label Text="• Возведение в степень (^)" />

                

                <Label Text="Выолнила работу: Сухомяткина Ксения" FontSize="14"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
