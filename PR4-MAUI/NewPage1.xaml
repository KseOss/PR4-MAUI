<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PR4_MAUI.NewPage1"
             Title="Ручной расчет">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Ручной расчет" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"/>

                <VerticalStackLayout Spacing="10">
                    <Label Text="Введите выражение" FontAttributes="Bold"/>
                    <Entry x:Name="ExpressionEntry" 
                           Placeholder="Число операция число"
                           TextChanged="OnInputChanged"
                           FontSize="16"/>

                    <Label Text="Или введите отдельно:" FontAttributes="Bold" Margin="0,10,0,0"/>

                    <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                        <Label Text="Первое число:" Grid.Row="0" Grid.Column="0"/>
                        <Entry x:Name="Num1Entry" 
                               Keyboard="Numeric" 
                               TextChanged="OnInputChanged"
                               Placeholder="Число 1"
                               Grid.Row="1" Grid.Column="0"/>

                        <Label Text="Операция:" Grid.Row="0" Grid.Column="1"/>
                        <Picker x:Name="OperationPicker"
                                Title="Выберите операцию"
                                Grid.Row="1" Grid.Column="1">
                            <Picker.Items>
                                <x:String>+</x:String>
                                <x:String>-</x:String>
                                <x:String>*</x:String>
                                <x:String>/</x:String>
                                <x:String>%</x:String>
                                <x:String>^</x:String>
                            </Picker.Items>
                        </Picker>

                        <Label Text="Второе число:" Grid.Row="0" Grid.Column="2"/>
                        <Entry x:Name="Num2Entry" 
                               Keyboard="Numeric" 
                               TextChanged="OnInputChanged"
                               Placeholder="Число 2"
                               Grid.Row="1" Grid.Column="2"/>
                    </Grid>
                </VerticalStackLayout>

                <Button x:Name="CalculateButton" 
                    Text="Рассчитать" 
                    Clicked="OnCalculateClicked"
                    BackgroundColor="#007bff"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"/>
            <VerticalStackLayout>
                <Label Text="Результат:" FontAttributes="Bold"/>
                <Entry x:Name="ResultEntry" 
                           IsEnabled="False" 
                           Placeholder="Нажмите 'Рассчитать'"
                           FontAttributes="Bold"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
